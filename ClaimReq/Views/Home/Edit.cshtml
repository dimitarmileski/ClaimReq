@using Microsoft.AspNetCore.Mvc.Rendering
@model System.Collections.Generic.KeyValuePair<string, ClaimReq.Models.Claim>
@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager


@{
    ViewBag.Title = "Add : Claim";
}

@using (Html.BeginForm("Save", "Home", FormMethod.Post))
{
    <div class="text-left">
        @if (!string.IsNullOrEmpty(Model.Key))
        {
        <div class="form-group w-75 mx-auto">
            <input type="hidden" name="Key" value="@Model.Key" />
            Username: <strong>@Model.Key</strong>
        </div>
        }
        else
        {
        <div class="form-group w-75 mx-auto">
            @Html.LabelFor(m => m.Key, "Username")
            @Html.TextBoxFor(m => m.Key, new { @class = "form-control" })
        </div>
        }
        </div>


        <form action="post">
            <div class="w-75 mx-auto">


                <div class="text-left">
                    <legend>Video</legend>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Value.VideoInfo.Title, "Video Title")
                        @Html.TextBoxFor(m => m.Value.VideoInfo.Title, new { id = "formGroupExampleInput", @class = "form-control", placeholder = "Video Title" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Value.VideoInfo.Url, "Video Url")
                        @Html.TextBoxFor(m => m.Value.VideoInfo.Url, new { id = "formGroupExampleInput", @class = "form-control", placeholder = "Video Title" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Value.VideoInfo.Id, "Video Id")
                        @Html.TextBoxFor(m => m.Value.VideoInfo.Id, new { id = "formGroupExampleInput", @class = "form-control", placeholder = "Video Id" })
                    </div>

                    @Html.LabelFor(m => m.Value.VideoInfo.Category, "Video Category")

                    <br />
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <label class="input-group-text" for="inputGroupSelect01"><i class="fas fa-video"></i></label>
                        </div>
                        @Html.DropDownListFor(m => m.Value.VideoInfo.Category,
                            new List<SelectListItem> {
                                 new SelectListItem { Value = "None" , Text = "Choose category..." },
                                 new SelectListItem { Value = "Film & Animation" , Text = "Film & Animation" },
                                 new SelectListItem { Value = "Autos & Vehicles" , Text = "Autos & Vehicles" },
                                 new SelectListItem { Value = "Music" , Text = "Music" },
                                 new SelectListItem { Value = "Pets & Animals" , Text = "Pets & Animals" },
                                 new SelectListItem { Value = "Sports" , Text = "Sports" },
                                 new SelectListItem { Value = "Travel & Events" , Text = "Travel & Events" },
                                 new SelectListItem { Value = "Gaming" , Text = "Gaming" },
                                 new SelectListItem { Value = "People & Blogs" , Text = "People & Blogs" },
                                 new SelectListItem { Value = "Comedy" , Text = "Comedy" },
                                 new SelectListItem { Value = "Entertainment" , Text = "Entertainment" },
                                 new SelectListItem { Value = "News & Politics" , Text = "News & Politics" },
                                 new SelectListItem { Value = "Howto & Style" , Text = "Howto & Style" },
                                 new SelectListItem { Value = "Education" , Text = "Education" },
                                 new SelectListItem { Value = "Science & Technology" , Text = "Science & Technology" },
                                 new SelectListItem { Value = "Nonprofits & Activism" , Text = "Nonprofits & Activism" }
                              },
                            new { id = "inputGroupSelect01", @class = "custom-select" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.Value.VideoInfo.Description, "Video Description")
                        @Html.TextAreaFor(m => m.Value.VideoInfo.Description, new { id = "exampleTextarea", @class = "form-control" })
                    </div>

                    <div class="input-group mb-3" style="">
                        <div class="input-group">
                            @Html.LabelFor(m => m.Value.VideoInfo.Tags, new { @class = "input-group-text w-100", id = "inputGroup-sizing-default" })
                        </div>
                        @Html.TextBoxFor(m => m.Value.VideoInfo.Tags, new { id = "videoTags", data_role = "tagsinput", type = "text", @class = "form-control", name = "videoTags" })
                    </div>


                    <div class="form-group">
                        @Html.LabelFor(m => m.Value.VideoInfo.DatePublished)
                        @Html.TextBoxFor(m => m.Value.VideoInfo.DatePublished, new { id = "datepicker1", @class = "form-control datepicker" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.Value.VideoInfo.ChannelTitle, "Video Channel Title")
                        @Html.TextBoxFor(m => m.Value.VideoInfo.ChannelTitle, new { id = "formGroupExampleInput", @class = "form-control", placeholder = "Video Channel Title" })
                    </div>

                    <legend>Claim</legend>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Value.Description, "Description")
                        @Html.TextAreaFor(m => m.Value.Description, new { id = "exampleTextarea", @class = "form-control" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.Value.Date)
                        @Html.TextBoxFor(m => m.Value.Date, new { id = "datepicker2", @class = "form-control datepicker" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.Value.altUrlUpload, "Alt Url Upload");
                        @Html.TextBoxFor(m => m.Value.altUrlUpload, new { id = "formGroupExampleInput", @class = "form-control", placeholder = "Alt Url Upload" })
                    </div>
                </div>
                <hr />
                <p>

                    @if (!string.IsNullOrEmpty(Model.Key))
                    {
                        @*@Html.LabelFor(m => m.Value.IsResolved, "Resolved")
                            @Html.CheckBoxFor(m => m.Value.IsResolved, new { @checked = "checked" })*@


                        <div class="custom-control custom-checkbox mb-3">
                            @Html.CheckBoxFor(m => m.Value.IsResolved, new { id = "customControlValidation1", @checked = "checked", @class = "custom-control-input" })
                            <label class="custom-control-label" for="customControlValidation1">Resolved</label>
                            <div class="invalid-feedback">Example invalid feedback text</div>
                        </div>

                    }


                </p>

                <input type="submit" value="Add Claim" class="btn btn-secondary" />
            </div>
        </form>

        }


        @section Scripts{

            <script>
                $(function () {
                    $('.datepicker').each(function () {
                        $(this).datepicker();
                    });
                });

            </script>
        }
